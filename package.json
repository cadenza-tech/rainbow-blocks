{
  "name": "rainbow-blocks",
  "displayName": "Rainbow Blocks",
  "description": "Colorize matching block pairs for Ruby, Elixir, Crystal, Lua, Julia, Bash, and more",
  "version": "1.0.0",
  "publisher": "cadenza-tech",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/cadenza-tech/rainbow-blocks"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "rainbow",
    "blocks",
    "brackets",
    "ruby",
    "elixir",
    "crystal",
    "lua",
    "julia",
    "bash",
    "ada",
    "cobol",
    "fortran",
    "matlab",
    "octave",
    "verilog",
    "vhdl",
    "syntax",
    "highlighting"
  ],
  "activationEvents": [
    "onLanguage:ruby",
    "onLanguage:elixir",
    "onLanguage:crystal",
    "onLanguage:lua",
    "onLanguage:julia",
    "onLanguage:shellscript",
    "onLanguage:bash",
    "onLanguage:matlab",
    "onLanguage:octave",
    "onLanguage:verilog",
    "onLanguage:systemverilog",
    "onLanguage:vhdl",
    "onLanguage:ada",
    "onLanguage:fortran",
    "onLanguage:fortran-modern",
    "onLanguage:FortranFreeForm",
    "onLanguage:FortranFixedForm",
    "onLanguage:cobol",
    "onLanguage:COBOL"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Rainbow Blocks",
      "properties": {
        "rainbowBlocks.colors": {
          "type": "array",
          "default": [
            "#E07080",
            "#E0E070",
            "#70B0E0"
          ],
          "items": {
            "type": "string"
          },
          "maxItems": 100,
          "description": "Colors for block pairs. Cycles when nesting exceeds the number of colors."
        },
        "rainbowBlocks.debounceMs": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "maximum": 10000,
          "description": "Debounce time in milliseconds for decoration updates."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "test": "vscode-test",
    "test:coverage": "vscode-test --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.42.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.10.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.12.0"
}
